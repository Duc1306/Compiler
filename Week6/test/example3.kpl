PROGRAM  EXAMPLE3;  (* TOWER OF HANOI *)

CONST
  K = 1;

VAR
  I:INTEGER;  
  N:INTEGER;  
  P:INTEGER;  
  Q:INTEGER;
  C:CHAR;

PROCEDURE  HANOI(VAR N:INTEGER;  S:INTEGER;  Z:INTEGER);
BEGIN
  IF  N != 0  THEN
    BEGIN
      I:=I+1;  
      CALL  WRITELN;
      CALL  WRITEI(I);  
      CALL  WRITEI(N);
      CALL  WRITEI(S);  
      CALL  WRITEI(Z);
    END
END;  (*END OF HANOI*)

BEGIN
  P:=1;  
  Q:=2;
  I:=0;

  CALL  HANOI(K,P,Q);   (* ❌ K là hằng, N là VAR *)

  CALL  WRITELN;
END.  (* TOWER OF HANOI *)
